set nocompatible
set nowrap
set encoding=utf-8
set showmatch
set shiftwidth=4
set autoindent
set smartindent
set smarttab
set expandtab
set number
set softtabstop=4
set tabstop=4
set textwidth=79
set fileformat=unix
set cursorline
set laststatus=2
let python_highlight_all=1
syntax on
syntax enable
filetype plugin indent on
autocmd BufNewFile,BufRead *.json set ft=javascript
